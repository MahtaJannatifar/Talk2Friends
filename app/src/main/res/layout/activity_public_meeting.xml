<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicMeeting">


    <Button
        android:id="@+id/createPublicMeetings"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:onClick="onClickCreateMeeting"
        android:text="Create Meeting"
        app:layout_constraintBottom_toTopOf="@+id/MeetingList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seeProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/seeProfile"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:onClick="onClickViewProfile"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/MeetingList"
        app:layout_constraintEnd_toStartOf="@+id/createPublicMeetings"
        app:layout_constraintStart_toEndOf="@+id/seeFriendsList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/seeFriendsList"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:onClick="onClickSeeFriendsList"
        android:text="Friends List"
        app:layout_constraintBottom_toTopOf="@+id/MeetingList"
        app:layout_constraintEnd_toStartOf="@+id/seeProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/MeetingList"
        android:layout_width="404dp"
        android:layout_height="485dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>